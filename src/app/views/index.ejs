<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

    <body>

        <!-- Header -->
        <%- include('partials/header') %>

            <!-- Main -->
            <main>

                <section class="main-banner">

                    <article class="main-article">

                        <div>
                            <h1>
                                Lorem ipsum dolor sit
                            </h1>
                            <br>
                            <p>
                                Lorem ipsum dolor sit amet consectetur adipisicing elit. Repellendus deserunt voluptatem
                                voluptates
                                incidunt maxime? Iure rem error est doloreque !
                            </p>
                        </div>
                    </article>
                    <div>
                        <img src="/img/banner.jpg" alt="" srcset="">
                    </div>
                </section>


                <section class="main-section">
                    <h1>Productos Destacados</h1>
                    <div class="products">
                        <% products.forEach(element=> {%>

                            <article class="product">
                                <a href="/product/<%- element.referencia %>">
                                    <img class="product-img" src="/img/products/<%- element.imagen1 %>" alt="">
                                    <h3><%- element.name %></h3>
                                    <div class="price">
                                        <h4>US $<%- element.value %></h4>
                                        <button type="submit">Comprar</button>
                                    </div>
                                </a>
                            </article>

                            <%}); %>
                    </div>

                </section>
            </main>

            <!-- footer -->
            <%- include('partials/footer') %>

    </body>

</html>