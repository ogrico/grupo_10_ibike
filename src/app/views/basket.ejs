<!DOCTYPE html>
<html lang="en">

<%- include('partials/head')%>

  <body>

    <!-- Header -->
    <%- include('partials/header') %>



      <main>

        <section class="new-section">

          <section class="left">
            <h2 class="tittle">Total: 20.700 COL$</h2>
            <ul type="none">
              <li class="one">304.700 COL$</li>
              <li class="two">66% de descuento</li>
            </ul>
            <article>
              <button type="submit" class="n-button">PAGAR</button>
            </article>
            <article class="border-1">
              <h3 class="promo">Promociones</h3>
              <h3 class="cd">X se han aplicado DES16COP</h3>
              <input type="search" class="var" />
              <button type="submit" class="button">Aplicar</button>
            </article>
          </section>

          <section class="products-bastek">

            <h3 class="added"> <%- productsBasket.length %> Elementos agregados</h3>

            <% productsBasket.forEach(element=> {%>
              <article class="border-2">
                <div class="border-2-box">
                  <img src="/img/products/<%- element.imagen1 %>" alt="" />
                </div>
                <div>
                  <h3 class="product-1"><%- element.name %></h3>
                </div>
                <div>
                  <ul type="none">
                    <li>US$ <%- element.value%> </li>
                    <li>Eliminar</li>
                    <li>Mover a Favoritos</li>
                  </ul>
                </div>
              </article>
              <% }) %>


          </section>

        </section>

        <section class="main-section">
          <h1>Te puede interesar</h1>
          <div class="products">
            <% products.forEach(element=> {%>

              <article class="product">
                <a href="/product/<%- element.referencia %>">
                  <img class="product-img" src="/img/products/<%- element.imagen1 %>" alt="">
                  <h3><%- element.name %></h3>
                  <div class="price">
                    <h4>US $<%- element.value %></h4>
                    <button type="submit">Agregar</button>
                  </div>
                </a>
              </article>

              <%}); %>
          </div>

        </section>
        <button type="submit" class="button-2">Pagar</button>
      </main>

      <!-- footer -->
      <%- include('partials/footer') %>

  </body>

</html>