<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>


  <body>

    <!-- Header -->
    <%- include('partials/header') %>

      <!-- Main -->
      <main>
        <section class="main-sinUp">

          <div class="container">
            
            <form action="/login" class="form" method="POST">
              <div class="imput-registro pt-5">
                <input type="email" name="usuario" id="usuario" placeholder="Ingresar email"
                  value="<%= locals.oldBody && oldBody.usuario? oldBody.usuario: "" %>" />
                <% if (locals.errors && errors.usuario) { %>
                  <p style="color: red;">
                    <%= errors.usuario.msg %>
                  </p>
                  <% } %>
              </div>
              <div class="imput-registro">
                <input type="password" name="contrasena" id="contrasena" placeholder="Ingresar contraseña"
                  value="" />
                <% if (locals.errors && errors.contrasena) { %>
                  <p style="color: red;">
                    <%= errors.contrasena.msg %>
                  </p>
                  <% } %>
              </div>

              <% if (error != '' ) { %>
                <p style="color: red;">
                  <%= error %>
                </p>
                <% } %>
                  <div class="btn">
                    <button type="submit" class="login" value="login">
                      Ingresar
                    </button>
                  </div>
                  <div class="olv-contraseña">
                    <a href="#">¿Olvidaste tu contraseña?</a>
                  </div>
                 
                  <div class="registrate">
                    <label>¿No tienes cuenta?</label>
                    <a href="/singUp"><b>Regístrate</b></a>
                  </div>
            </form>
          </div>
        </section>
      </main>

      <!-- footer -->
      <%- include('partials/footer') %>

  </body>

</html>