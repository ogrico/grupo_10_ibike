                                        <div class="price">
                                            <h4>US $<%- element.valor %></h4>
                                            <button type="submit">Comprar</button>
                                        </div>
                                    </a>
                                </article>
                                <% }) %>

                        </div>

                    </section>

                </section>


            </main>

            <!-- footer -->
            <%- include('partials/footer') %>

    </body>

</html>