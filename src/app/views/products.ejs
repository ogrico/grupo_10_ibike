                        </article>

                    </article>

                    <section class="main-section">
                        <h1>Productos Destacados</h1>
                        <div class="products">

                            <% products.forEach(element=> { %>
                                <article class="product">
                                    <a href="/product/<%- element.referencia %>">
                                        <img class="product-img" src="/img/products/bikes/<%- element.imagen1 %>"
                                            alt="">
